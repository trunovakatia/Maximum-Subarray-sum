#include <vector>

using namespace std;

int maxSequence(const vector<int>& arr) { // принимает константную ссылку на вектор целых чисел arr и возвращает целое число, представляющее максимальную сумму подряд идущих элементов.

    int sum = 0; // хранит текущее значение суммы продолженной подпоследовательности.
    int res = 0; // Хранит максимальную сумму, найденную во время обработки.

    for (int i : arr) { // Используется цикл for each для итерации по каждому элементу i в векторе arr.
        sum += i;
        if (sum > res) { res = sum; } // Если текущее значение sum больше, чем текущее значение res (максимальной суммы), обновляет res до текущего значения sum.
        if (sum < 0) { sum = 0; } // Если сумма становится отрицательной, она сбрасывается до нуля.
    }
    return res;
}
